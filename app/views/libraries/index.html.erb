<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>University</th>
    <th>Location</th>
    <th>Borrowing Days Limit</th>
    <th>Fines</th>
    <th colspan="6"></th>
  </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.name %></td>
        <td><%= library.university %></td>
        <td><%= library.location %></td>
        <td><%= library.max_days %></td>
        <td><%= library.fines %></td>
        <td><%= link_to 'Show', library %></td>
        <% if current_user.admin? or current_user.librarian? %>
          <td><%= link_to 'Edit', edit_library_path(library) %></td>
          <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.librarian? || current_user.admin? %>
<%= link_to 'New Library', new_library_path %><br>
<% end %>


<br><%= link_to 'Back', home_index_path %> |
