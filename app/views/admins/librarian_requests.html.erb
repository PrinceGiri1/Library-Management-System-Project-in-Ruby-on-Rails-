<h1>Approve Librarians</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>

  <% @lib.each do |librarian| %>
    <tr>
      <td><%= librarian.email %></td>
      <td><%= librarian.name %></td>
      <td><%= link_to 'Approve', approve_librarian_path(librarian) %></td>
      <td><%= link_to 'Destroy', librarian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>


  </tbody>

</table>
<br><%= link_to 'Back', home_index_path %> |
